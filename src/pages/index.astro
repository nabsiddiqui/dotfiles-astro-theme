---
import Layout from '../layouts/Layout.astro';
import TerminalHeader from '../components/TerminalHeader.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';
import { sortPostsByDate, filterDrafts } from '../lib/utils';
import { siteConfig } from '../config';

const posts = await getCollection('blog');
const publishedPosts = filterDrafts(posts);
const recentPosts = sortPostsByDate(publishedPosts).slice(0, siteConfig.blog.postsOnHomepage);

// Get social links from config
const socialLinks = siteConfig.social;
const hero = siteConfig.hero;
const heroCTAs = siteConfig.hero.ctaButtons;

// Parse description for highlighted keywords (wrapped in **)
function parseDescription(desc: string) {
  return desc.replace(/\*\*([^*]+)\*\*/g, '<span class="text-primary">$1</span>');
}
---

<Layout title={`${siteConfig.title} | ${siteConfig.description}`}>
  <!-- Hero Section -->
  <section class="min-h-[50vh] flex items-center justify-center py-16">
    <div class="container max-w-5xl mx-auto px-6 flex justify-center">
      <!-- Terminal-styled card -->
      <div class="terminal-window max-w-3xl w-full">
        <div class="terminal-titlebar">
          <div class="terminal-buttons">
            <span class="terminal-button terminal-button-red"></span>
            <span class="terminal-button terminal-button-yellow"></span>
            <span class="terminal-button terminal-button-green"></span>
          </div>
          <span class="text-sm text-muted-foreground font-mono">{hero.terminalTitle}</span>
        </div>
        <div class="terminal-content text-center">
          <div class="space-y-4">
            <div>
              <h1 class="text-3xl md:text-4xl font-bold font-mono">
                {hero.title}
              </h1>
              
              <!-- Typewriter Container -->
              <div class="typewriter-lines mt-4 space-y-1 min-h-[3rem]" id="typewriter-container" data-lines={JSON.stringify(hero.typewriterLines)}>
                <p class="text-muted-foreground font-mono" id="line-1"></p>
                <p class="text-muted-foreground font-mono" id="line-2"><span class="terminal-cursor" id="typewriter-cursor"></span></p>
              </div>
            </div>
            
            <p class="font-mono text-muted-foreground" set:html={parseDescription(hero.description)} />

            <!-- Social Links -->
            <div class="flex flex-wrap items-center justify-center gap-4 pt-2">
              {socialLinks.github && (
                <a href={socialLinks.github} target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-primary transition-colors" aria-label="GitHub">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                </a>
              )}
              {socialLinks.twitter && (
                <a href={socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-primary transition-colors" aria-label="Twitter">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                </a>
              )}
              {socialLinks.rss && (
                <a href={socialLinks.rss} class="text-muted-foreground hover:text-primary transition-colors" aria-label="RSS Feed">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/></svg>
                </a>
              )}
            </div>
          </div>
          
          <div class="flex flex-wrap gap-3 mt-8 justify-center">
            {heroCTAs.map(cta => (
              <a 
                href={cta.href} 
                class={`inline-flex items-center gap-2 px-4 py-2 rounded font-mono text-sm transition-colors ${cta.primary ? 'bg-primary text-primary-foreground hover:bg-primary/90' : 'border border-border hover:bg-card'}`}
              >
                {cta.text}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Posts -->
  <section class="py-16 border-t border-border">
    <div class="container max-w-4xl mx-auto px-6">
      <TerminalHeader command="ls -la ./posts | head -5" size="lg" />
      
      <div class="space-y-1">
        {recentPosts.map(post => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            date={post.data.date}
            slug={post.slug}
            tags={post.data.tags}
          />
        ))}
      </div>

      <div class="mt-8 pt-6 border-t border-border">
        <a 
          href="/blog" 
          class="font-mono text-sm text-muted-foreground hover:text-primary transition-colors"
        >
          View all posts â†’
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  function initTypewriter() {
    const container = document.getElementById('typewriter-container');
    if (!container) return;
    
    // Get lines from data attribute (set from config)
    const linesData = container.getAttribute('data-lines');
    const lines = linesData ? JSON.parse(linesData) : [
      "A minimal, terminal-inspired blog theme",
      "Built with Astro 5.x and Tailwind CSS v4"
    ];
    
    const typeSpeed = 30;
    const delayBetweenLines = 400;
    
    let currentLine = 0;
    let currentChar = 0;
    
    const line1 = document.getElementById('line-1');
    const line2 = document.getElementById('line-2');
    const cursor = document.getElementById('typewriter-cursor');
    
    if (!line1 || !line2 || !cursor) return;
    
    const lineElements = [line1, line2];
    
    // Reset all lines
    lineElements.forEach(el => { if (el) el.textContent = ''; });
    
    function type() {
      if (currentLine >= lines.length) {
        return;
      }
      
      const targetLine = lineElements[currentLine];
      const text = lines[currentLine];
      
      if (!targetLine) return;
      
      // Move cursor to current line
      lineElements.forEach((el, i) => {
        if (el && cursor) {
          if (i === currentLine) {
            el.innerHTML = text.substring(0, currentChar);
            el.appendChild(cursor);
          } else if (i < currentLine) {
            el.textContent = lines[i];
          } else {
            el.textContent = '';
          }
        }
      });
      
      currentChar++;
      
      if (currentChar <= text.length) {
        setTimeout(type, typeSpeed);
      } else {
        currentLine++;
        currentChar = 0;
        setTimeout(type, delayBetweenLines);
      }
    }
    
    type();
  }
  
  initTypewriter();
  document.addEventListener('astro:page-load', initTypewriter);
</script>
