---
interface Props {
  title: string;
  description: string;
  date: string;
  slug: string;
  tags?: string[];
}

const { title, description, date, slug, tags = [] } = Astro.props;

// Format date
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<a href={`/blog/${slug}`} class="blog-card group">
  <time class="blog-card-date" datetime={date}>
    {formattedDate}
  </time>
  
  <h3 class="blog-card-title font-mono">
    {title}
  </h3>
  
  <p class="blog-card-description">
    {description}
    <span class="blog-card-arrow ml-2">â†’</span>
  </p>
  
  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mt-3">
      {tags.map(tag => (
        <span class="text-xs font-mono px-2 py-0.5 bg-secondary rounded text-muted-foreground">
          #{tag}
        </span>
      ))}
    </div>
  )}
</a>
